{{import Form from "ui/form"}}
{{import ColorPicker from "color-picker"}}
{{import Button from "ui/form/button"}}

<Form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" onSubmit={{this.saveGarden}} as |Form|>
  <Form.label>
    Garden Name
  </Form.label>
  <Form.input placeholder="Name" type="text" @value={{mut this.name}}/>

  <Form.label>
    Plant Hardiness Zone
  </Form.label>
  <Form.input placeholder="6b" type="text" @value={{mut this.zone}}/>

  <Form.submit type="submit">Save</Form.submit>
</Form>